<Window x:Class="Installer.WindowDialogSQL"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Installer"
        mc:Ignorable="d"
        Title="WindowDialogSQL" Height="179" Width="644">
    <Grid Margin="0,0,10,-6">
        <Button x:Name="btn_PostgreSql" Content="Postgre SQL" HorizontalAlignment="Left" Margin="94,95,0,0" VerticalAlignment="Top" Height="35" Width="91" FontWeight="Bold"/>
        <Button x:Name="btn_MsSql" Content="MS SQL" HorizontalAlignment="Center" Margin="0,95,0,0" VerticalAlignment="Top" Height="35" Width="106" FontWeight="Bold"/>
        <Button x:Name="btn_SqLite" Content="SQLite" HorizontalAlignment="Left" Margin="440,95,0,0" VerticalAlignment="Top" Height="35" Width="100" FontWeight="Bold"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,24,0,0" Text="Выберите нужную СУБД" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Normal" FontSize="40"/>

    </Grid>
</Window>
